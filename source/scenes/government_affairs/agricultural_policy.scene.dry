on-arrival: budget -= 1; ldr_promise_failed = 1 if (budget < 0 and liberal_budget_accepted and current_budget > -1); rural_bn += 5*(1-dissent); rural_bn -= 4*(1-dissent); unemployed -= 1 if unemployed >= 5; communist_strength += 8; communist_dissent -= 5; maximalist_strength += 8; maximalist_dissent -= 5; rural_policy += 1 
